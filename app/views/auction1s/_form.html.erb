
<%= form_for(@auction1) do |f| %>
  <div class="container-fluid">
  
  <div class="form-group">
 <span class="border border-primary"></span>
    <%=f.label :nombre, @auction1.property.nombre%>
    <%= f.hidden_field :property_id%>
 <span class="border border-primary"></span>
  </div>
   <div class="form-group">
    <%=f.label :monto, @auction1.property.monto %>
    <%= f.hidden_field :property_id%>
 </div>
   <div class="form-group">
    <%=f.label :puja, 'Puja '%>
    <%=f.text_field :puja, class: 'form-control', placeholder: 'Ingrese puja', required: true %>
  </div>
 

  
  <div class="form-group">
    <%=f.label :fechanew, 'Semana a subastar:'%>
   
        <%=f.date_field :fechanew, { required:true}  %>
  
  </div>

  <div class="form-group">
    <%=f.label :fechainicio, 'Fecha Inicio:'%>
 <%=f.date_field :fechainicio, { required:true}  %>
 </div>
  
</div>
<%= f.submit 'crear nueva Subasta', class: 'btn btn-primary' %>
  
<% end %>
