
<%= form_for(@auction1) do |f| %>
  <div class="container-fluid">
  
  <div class="form-group">
 <span class="border border-primary"></span>
    <%=f.label :nombre, @auction1.property.nombre%>
    <%= f.hidden_field :property_id%>
 <span class="border border-primary"></span>
  </div>
  
   <div class="form-group">
   <%=f.label :puja, "Puja Actual" %>
    <%=f.label :puja, @auction1.puja %>
    <%= f.hidden_field :property_id%>
 </div>
 
  <div class="form-group">
  <%=f.label :fechanew, 'fecha por la que se subasta:'%>
    <%=f.label :fechanew,  I18n.localize(@auction1.fechanew)%>
    <%= f.hidden_field :property_id%>
  </div>

   <div class="form-group">
    <%=f.label :monto, "Ingrese Puja" %>
   <%=f.text_field :monto, class: 'form-control', placeholder: 'Ingrese puja', required: true %>
   </div>
  
</div>
 <%= f.submit 'Pujar', class: 'btn btn-primary' %>
  
<% end %>
  