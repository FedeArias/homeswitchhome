
<%= simple_form_for(@auctionn) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :puja, class: 'form control', placeholders: 'ingrese puja actual', required: true  %>
    <%= f.input :fecha %>
    <%= f.input :precio %>
    <%= f.input :minimo %>
  </div>

  <div class="form-actions">
    <%= f.submit 'crear nueva subasta', class: 'btn btn-primary' %>
  </div>
<% end %>
