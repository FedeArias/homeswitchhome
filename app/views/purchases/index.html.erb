<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Semana</th>
      <th>Nombre</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
      <% if purchase.user_id==current_user.id || current_user.esAdmin %>
      <%if purchase.repetido != 0 %>
        <td><%= I18n.localize(purchase.week) if purchase.week %></td>
        <td><%= purchase.property.nombre %></td>  
        <% if signed_in? &&  current_user.esAdmin  %>
        <td><%= link_to 'mostrar', purchase %></td>
       <td><%= link_to 'eliminar', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     <%end%>   
      <%end%>
      <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

