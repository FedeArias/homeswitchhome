
<%= form_for(@petition) do |f| %>
<div class="container-fluid">
  <div class="form-group">
      <%=f.label :email, @petition.user.email%>
    <%= f.hidden_field :user_id%>
  </div>
</div>
  <div class="form-actions">
    <%= f.submit 'crear peticion', class: 'btn btn-primary' %>
  </div>
<% end %>
